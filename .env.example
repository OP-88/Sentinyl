# Sentinyl Environment Configuration
# Copy this to .env and fill in your actual values
# NEVER commit the .env file to version control!

# ========================================
# Database Configuration
# ========================================
POSTGRES_USER=sentinyl
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
POSTGRES_DB=sentinyldb
DATABASE_URL=postgresql://sentinyl:CHANGE_ME_TO_SECURE_PASSWORD@db:5432/sentinyldb

# ========================================
# Redis Configuration
# ========================================
REDIS_URL=redis://redis:6379/0

# ========================================
# API Configuration
# ========================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# CORS Configuration (comma-separated list of allowed origins)
# For development, include both frontend and bridge URLs
# For production, use your actual frontend domain
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com


# ========================================
# Stripe Billing Integration
# ========================================
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_API_KEY=sk_test_YOUR_STRIPE_SECRET_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# ========================================
# GitHub Integration (for leak detection)
# ========================================
# Create token at: https://github.com/settings/tokens
# Required scopes: public_repo, read:org
GITHUB_TOKEN=ghp_YOUR_GITHUB_PERSONAL_ACCESS_TOKEN

# ========================================
# Notification Integrations
# ========================================

# Slack Webhook URL
# Create at: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Microsoft Teams Webhook URL  
# Create at: Teams → Channel → Connectors → Incoming Webhook
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/YOUR_WEBHOOK_ID

# ========================================
# Neo4j Graph Database (Enterprise)
# ========================================
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# ========================================
# Worker Configuration
# ========================================
WORKER_POLL_INTERVAL=5

# ========================================
# Application Settings
# ========================================
APP_NAME=Sentinyl
APP_VERSION=1.0.0

# ========================================
# Security Notes
# ========================================
# 1. NEVER commit .env to version control
# 2. Use strong, unique passwords for all services
# 3. Rotate keys regularly (every 90 days recommended)
# 4. Use different keys for development/staging/production
# 5. Store production secrets in a secrets manager (AWS Secrets Manager, HashiCorp Vault, etc.)
