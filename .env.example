# ==========================================
# Sentinyl Environment Configuration
# ==========================================
# Copy this file to .env and fill in your values

# Database Configuration
POSTGRES_PASSWORD=your_secure_database_password_here

# Redis Configuration (optional password)
# REDIS_PASSWORD=your_redis_password_here

# Slack Notifications
# Create incoming webhook at: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# GitHub API Token
# Create at: https://github.com/settings/tokens
# Requires 'public_repo' or 'repo' scope for code search
GITHUB_TOKEN=ghp_yourgithubtokenhere1234567890abcdef

# Application Settings (optional)
# DEBUG=false
# APP_NAME=Sentinyl

# ==========================================
# ENTERPRISE FEATURES
# ==========================================

# Neo4j Graph Database
# Create investigation graphs linking domains, IPs, actors, and repositories
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_graph_password_here

# Stripe Billing (Optional - for SaaS deployment)
# Create API key at: https://dashboard.stripe.com/apikeys
STRIPE_API_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Microsoft Teams Notifications (Optional)
# Create incoming webhook in Teams channel settings
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL
